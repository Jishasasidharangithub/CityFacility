<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cslDescription"
        style="@style/SelectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/corner_gray_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/_10sdp"
        >

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRequestService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Request"
            app:layout_constraintStart_toEndOf="@+id/ivNotification"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/normalTextSemiBold"
            android:textColor="@color/green"/>

        <TextView
            android:id="@+id/tvNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvRequestService"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="04-09-2023"/>

        <TextView
            android:id="@+id/tvServiceDescription"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRequestService"
            app:layout_constraintStart_toStartOf="@+id/tvRequestService"
            app:layout_constraintEnd_toEndOf="@+id/tvNotificationDate"
            android:justificationMode="inter_word"
            app:layout_constraintBottom_toBottomOf="parent"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras varius posuere aliquam. Curabitur urna mauris, tempor fringilla luctus eu, eleifend sit amet elit. "
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>