<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMySubscriptionItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_gray_bg">

            <TextView
                android:id="@+id/tvACservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="A/C Services"
                android:textColor="@color/green"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPaymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="04-05-2023"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tvACservices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvACservices"
                app:layout_constraintTop_toTopOf="@+id/tvACservices" />

            <TextView
                android:id="@+id/tvPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Payment"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/tvACservices"
                app:layout_constraintStart_toStartOf="@+id/tvACservices"
                app:layout_constraintTop_toBottomOf="@+id/tvACservices" />

            <TextView
                android:id="@+id/tvPaymentType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Cash on Arrival"
                android:textColor="@color/green"
                app:layout_constraintEnd_toEndOf="@+id/tvPayment"
                app:layout_constraintStart_toStartOf="@+id/tvPayment"
                app:layout_constraintTop_toBottomOf="@+id/tvPayment" />

            <TextView
                android:id="@+id/tvAED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 250"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="@+id/tvPaymentDate"
                app:layout_constraintEnd_toEndOf="@+id/tvPaymentDate"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentDate"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_14ssp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>